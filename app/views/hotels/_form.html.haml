= simple_form_for(@hotel, :html => {:multipart => true} ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :star_rating
    = f.input :breakfast_included
    = f.input :room_description
    = f.input :photo
    = f.hidden_field(:photo_cache)
    = f.input :price_for_room
    = f.fields_for :address do |addresses_form|
      = addresses_form.input :countr
      = addresses_form.input :state
      = addresses_form.input :city
      = addresses_form.input :street

  .form-actions
    = f.button :submit
